<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/lightWhite"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/tvNameCustomerMenuHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyen Hai Linh"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvAppNameMenuHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELL COME"
        android:fontFamily="@font/bungee_regular"
        android:textSize="24sp"
        android:layout_above="@+id/tvNameCustomerMenuHeader"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/introduction"
        android:layout_above="@+id/tvAppNameMenuHeader"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="175dp"
        android:src="@drawable/menuh"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="-10dp"/>

</RelativeLayout>